<Window x:Class="WpfSelectie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSelectie"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnWeekDag" Content="Dag van de week" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="100" Click="btnWeekDag_Click" Height="25"/>
        <Button x:Name="btnLeeftijd" Content="Meerderjarig?" HorizontalAlignment="Left" Margin="85,96,0,0" VerticalAlignment="Top" Width="100" Click="btnLeeftijd_Click" Height="25"/>
        <Label x:Name="lblTijd" Content="Tijdstip" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="251"/>
        <Button x:Name="btnAvondcheck" Content="Check avond" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnAvondcheck_Click" Height="25" Margin="10,66,0,0"/>
        <ComboBox x:Name="cmbLeeftijd" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" Width="70" Height="25"/>

    </Grid>
</Window>
